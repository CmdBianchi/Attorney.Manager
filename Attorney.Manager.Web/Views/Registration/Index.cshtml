@model IEnumerable<Attorney.Manager.Web.Models.Registration.AttorneyViewModel>

@{
    ViewBag.Title = "Home Page";
}

<h2> @Html.ActionLink("Create New Attorney", "Create") </h2>>
    
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AttorneyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttorneyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id= item.AttorneyId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AttorneyId })
            </td>
        </tr>
    }

</table>